<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite"
    android:id="@+id/option_view2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bus_icon">
        </ImageView>


        <TextView
            android:id="@+id/trainid_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="G123"
            android:textColor="@color/colorBlack"
            android:textSize="25dp">
        </TextView>


        <TextView
            android:id="@+id/start_arrive_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="北京 一 上海"
            android:textColor="@color/colorBlack"
            android:textSize="25dp">
        </TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leavetime_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="起飞时间：2023-4-15 14:54:50开"
            android:textSize="18dp">
        </TextView>

        <TextView
            android:id="@+id/seat_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="座        次：6机厢 05C 经济舱"
            android:textSize="18dp"></TextView>

        <TextView
            android:id="@+id/passenger_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="乘  客  名：Koi"
            android:textSize="18dp">
        </TextView>


    </LinearLayout>


</LinearLayout>
